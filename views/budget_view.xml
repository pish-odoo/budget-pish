<odoo>
      <data>
            <record id="budget_action" model="ir.actions.act_window">
                  <field name="name">Budget</field>
                  <field name="res_model">budget.budget</field>
                  <field name="view_mode">kanban,form</field>
            </record>
            <record id="budget_action_form" model="ir.actions.act_window">
                  <field name="name">Budget.form.action</field>
                  <field name="res_model">budget.budget</field>
                  <field name="view_mode">form</field>
            </record>

            <record id="budget_view_kanban" model="ir.ui.view">
                  <field name="name">budget.view.kanban</field>
                  <field name="model">budget.budget</field>
                  <field name="arch" type="xml">
                  <kanban records_draggable="0">
                        <field name="color"/>
                        <field name="user_id" string="Project Manager"/>
                        <templates>
                              <t t-name="kanban-menu" groups="base.group_user">
                                    <div class="container">
                                        <div class="row">
                                            <div class="col-6 o_kanban_card_manage_section o_kanban_manage_view">
                                                <h5 role="menuitem" class="o_kanban_card_manage_title">
                                                    <span>View</span>
                                                </h5>
                                                <div role="menuitem">
                                                    <a name="action_view_tasks" type="object">Set Cover Image</a>
                                                </div>
                                                <div role="menuitem" groups="base.group_user">
                                                      <button string="Configuration" type="action" name="budget.budget_action_form" class="oe_highlight"/>
                                                      
                                                </div>
                                                <ul class="oe_kanban_colorpicker" data-field="color"/>
                                            </div>
                                          </div>
                                    </div>
                              </t>
                              <t t-name="kanban-box">
                                  <div t-attf-class="oe_kanban_content oe_kanban_global_click o_kanban_get_form">
                                      <div class="row">
                                          <div class="col-12">
                                              <strong><field name="name" string="Project Name"/></strong>
                                          </div>
                                      </div>
                                      <div class="row">
                                          <div class="col-8">
                                              <field name="partner_id" string="Contact"/>
                                          </div>
                                          <div class="col-4">
                                              <div class="oe_kanban_bottom_right float-end">
                                                  <field name="user_id" widget="many2one_avatar_user"/>
                                              </div>
                                          </div>
                                      </div>
                                  </div>
                              </t>
                        </templates>
                  </kanban>
                  </field>
            </record>

            <record id="budget_view_form" model="ir.ui.view">
                  <field name="name">budget.view.form</field>
                  <field name="model">budget.budget</field>
                  <field name="arch" type="xml">
                        <form>
                              <header>
                                    <button name='demo' class='oe_highlight' type='object' string='Rest to draft' />
                                    <button name='demo' type='object' string='Revise' />
                                    <button name='demo' type='object' string='Done' />
                                    <button name='demo' type='object' string='Confirm' />
                                    <field name='state' widget='statusbar' />
                              </header>
                              <sheet>
                                    <h2>Budget Name</h2>
                                    <field name='name' placeholder='Budget: 1/1/2024 to 1/3/2024'/>
                                    <group>
                                          <group>
                                                <field name='responsible' />
                                                <field name='revised_id' />
                                          </group>
                                          <group>
                                                <label for='start_date' string='Period' />
                                                <div class="o_row">
                                                <field name='start_date' />
                                                <label for='end_date' string='->' />
                                                <field name='end_date' class='oe_inline' />
                                                </div>
                                                <field name='company' />
                                          </group>
                                    </group>
                                    <notebook>
                                          <page name='Budget Lines'>
                                                <field name='budget_ids'/>
                                          </page>
                                    </notebook>
                              </sheet>
                              
                        </form>
                  </field>
            </record>

            <record id="action_Budgets" model="ir.actions.server">
                  <field name="name">Budgets</field>
                  <field name="type">ir.actions.server</field>
                  <field name="model_id" ref="model_budget_budget"/>
                  <field name="binding_model_id" ref="model_budget_budget"/>
                  <!-- <field name="binding_view_types">kanban,form</field> -->
                  <field name="state">code</field>
                  <field name="code">action = env['budget.budget'].open_budget_wizard()</field>
            </record>
            

            
            
      </data>
</odoo>